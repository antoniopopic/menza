<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/textView_restName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin10"
        android:layout_marginTop="@dimen/margin10"
        android:textSize="@dimen/textsize25"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Campus"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="4.3"
        android:textSize="@dimen/textsize20"
        android:id="@+id/textView_ratingMain"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="@dimen/margin10"
        android:textColor="@color/white"/>
    <View
        android:layout_width="24sp"
        android:layout_height="24sp"
        android:background="@drawable/ic_star_accent_24dp"
        app:layout_constraintRight_toLeftOf="@id/textView_ratingMain"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/margin10"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/heigh2sp"
        android:layout_marginStart="@dimen/margin10"
        android:layout_marginTop="@dimen/margin10"
        android:layout_marginEnd="@dimen/margin10"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@id/textView_restName" />
</android.support.constraint.ConstraintLayout>